#:kivy 1.8.0

<ListDropDown>:
    id: list_drop_down
    size_hint_y: None
    height: root.height/10

<PlaylistSearcher>:
    station_list: station_list
    list_type: list_type
    ListDropDown:
        id: list_type
    StationList:
        id: station_list
        height: root.height * .9
        do_scroll_x: False

<StationListingItem>:
    size_hint_y: None
    size_hint_x: None
    height: 200
    width: 200
            
<PlaylistDetails>:
    Button:
        id: f_but
        text: "Download"
        on_release: root.download()
                
<PlaylistDownloader>:
    Label:
        text: "Download"
            
<DownloaderWrapper>:
    playlist_searcher: playlist_searcher
    playlist_details: playlist_details
    playlist_downloader: playlist_downloader
#    canvas.before:
#        Rectangle:
#            size: self.size
#            source: 'assets/background-gradient.png'
    BoxLayout:
        PlaylistSearcher:
            id: playlist_searcher
            orientation: "vertical"
            size_hint: None, None
            height:root.height
            width: root.width/4
        PlaylistDetails:
            id: playlist_details
            orientation: "vertical"
            size_hint: None, None
            height:root.height
            width: root.width/4
        PlaylistDownloader:
            id: playlist_downloader
            orientation: "vertical"
            size_hint: None, None
            height:root.height
            width: root.width/2
        
